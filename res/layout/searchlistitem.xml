<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/search_result_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"    
    android:padding="10dp">
    
    <TextView 
        android:id="@+id/search_item_name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"        
        android:textColor="@android:color/black"
        android:textSize="15dp"
        android:typeface="sans"
        android:textStyle="bold"/>
    
    <TextView 
        android:layout_marginTop="15dp"
        android:id="@+id/search_item_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_item_name"
        android:layout_alignParentLeft="true"
        android:textColor="#002147"/>
    
    
    <TextView 
        android:id="@+id/search_item_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"               
        android:textStyle="bold"
        android:textColor="#417DC1"        
        android:layout_alignParentRight="true"        
        />
            
</RelativeLayout>